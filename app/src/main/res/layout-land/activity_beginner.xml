<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:background="?attr/backgroundColor"
    tools:context=".BeginnerActivity">

    <Switch
        android:id="@+id/theme_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s_dark_mode"
        android:textColor="?attr/textColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/title_beginner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title_beginner"
        android:textColor="?attr/textColor"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/beginner_choices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/beginner_choices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_beginner"
        android:layout_marginBottom="50dp">

        <RadioGroup
            android:id="@+id/group_fabric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_fabric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/radio_fabric"
                android:textColor="?attr/textColor"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/r_cotton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:button="@drawable/radio_selector"
                android:text="@string/s_cotton_mix"
                android:textColor="@drawable/color_selector"
                android:textSize="25sp" />

            <RadioButton
                android:id="@+id/r_synthetic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:button="@drawable/radio_selector"
                android:checked="true"
                android:text="@string/s_synthetic"
                android:textColor="@drawable/color_selector"
                android:textSize="25sp" />

            <RadioButton
                android:id="@+id/r_delicate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:button="@drawable/radio_selector"
                android:text="@string/s_delicate"
                android:textColor="@drawable/color_selector"
                android:textSize="25sp" />

            <RadioButton
                android:id="@+id/r_wool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:button="@drawable/radio_selector"
                android:text="@string/s_wool"
                android:textColor="@drawable/color_selector"
                android:textSize="25sp" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/group_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:text="@string/radio_color"
                android:textColor="?attr/textColor"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/r_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:button="@drawable/radio_selector"
                android:text="@string/s_white"
                android:textColor="@drawable/color_selector"
                android:textSize="25sp" />

            <RadioButton
                android:id="@+id/r_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:button="@drawable/radio_selector"
                android:checked="true"
                android:text="@string/s_dark"
                android:textColor="@drawable/color_selector"
                android:textSize="25sp" />

            <RadioButton
                android:id="@+id/r_colorful"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:button="@drawable/radio_selector"
                android:text="@string/s_colorful"
                android:textColor="@drawable/color_selector"
                android:textSize="25sp" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/group_dirt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_dirt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/radio_dirt"
                android:textColor="?attr/textColor"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/r_alot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:button="@drawable/radio_selector"
                android:text="@string/s_alot"
                android:textColor="@drawable/color_selector"
                android:textSize="25sp" />

            <RadioButton
                android:id="@+id/r_alittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:button="@drawable/radio_selector"
                android:checked="true"
                android:text="@string/s_alittle"
                android:textColor="@drawable/color_selector"
                android:textSize="25sp" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/group_allergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_allergy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/radio_allergy"
                android:textColor="?attr/textColor"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/r_no_allergy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:button="@drawable/radio_selector"
                android:text="@string/s_no"
                android:textColor="@drawable/color_selector"
                android:textSize="25sp" />

            <RadioButton
                android:id="@+id/r_allergy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:button="@drawable/radio_selector"
                android:checked="true"
                android:text="@string/s_yes"
                android:textColor="@drawable/color_selector"
                android:textSize="25sp" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/help_beginner"
        android:layout_width="92dp"
        android:layout_height="52dp"
        android:text="@string/s_help"
        android:textColor="?attr/textColor"
        android:textStyle="bold"
        android:background="?attr/help_button"
        android:onClick="toBeginnerHelp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/start_beginner"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@color/neonGreen"
        android:onClick="showPopup"
        android:text="@string/start"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"/>

    <ToggleButton
        android:id="@+id/favorite_beginner"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/favorite_button"
        android:textOn=""
        android:textOff=""
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/start_beginner" />

    <ImageButton
        android:id="@+id/back_b"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_arrow_back"
        android:onClick="mainScreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/main_screen" />

</androidx.constraintlayout.widget.ConstraintLayout>